
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script src="~/jquery-1.11.1.js"></script>
    <script src="~/vue-2.4.0.js"></script>
    <style type="text/css" >
        a{
            color:blue;
            cursor:pointer;
        }
    </style>
</head>
<body>
    <div id="aa">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href = '../MechanismFirst/ToAdd'" />
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="20%" class="TD_STYLE1">
                    I级机构编号
                </td>
                <td width="20%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="25%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="25%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,i) in MFs">
                <td class="TD_STYLE2">
                    {{item.FirstMId}}
                </td>
                <td class="TD_STYLE2">
                    {{item.FirstMName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.SalaryId}}
                </td>
                <td class="TD_STYLE2">
                    {{item.SalesId}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['../MechanismFirst/ToUpdate?id='+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    <a  v-on:click="Delete(item.Id)">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript" >
        var vm = new Vue({
            el: "#aa",
            data: {
                MFs:null
            },
            methods: {
                GetMFs: function () {
                    var t = this;
                    $.ajax({
                        url: "../MechanismFirst/GetMFs",
                        type: "post",
                        success: function (rs) {
                            t.MFs = eval("(" + rs + ")");
                        }
                    });
                },
                Delete: function (id) {
                    if (confirm("是否删除?")) {
                        var t = this;
                        $.ajax({
                            url: "../MechanismFirst/DeleteMF",
                            type: "post",
                            data: "id=" + id,
                            success: function (rs) {
                                if (rs == "have") {
                                    alert("该机构下包含子机构，请先删除子机构!");
                                } else {
                                    if (rs > 0) {
                                        t.GetMFs();
                                    } else {
                                        alert("删除失败!");
                                    }
                                }
                            }
                        });
                    }
                }
            },
            created: function () {
                this.GetMFs();
            }
        });
    </script>
</body>
</html>
