@model Model.UsersmanModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
@using (Html.BeginForm("ad", "Usersman", FormMethod.Post))
{
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--添加角色</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="保存" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">角色名称</td>
                <td class="TD_STYLE2">
                    @Html.TextBox("U_name1", null, new { @class = "INPUT_STYLE2" })
                    @Html.ValidationMessage("U_name1")
                </td>
                <td class="TD_STYLE1">角色说明</td>
                <td class="TD_STYLE2">
                    @Html.TextBox("U_sm", null, new { @class = "INPUT_STYLE2" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">角色是否可用</td>
                <td colspan="3" class="TD_STYLE2">
                    <select class = "SELECT_STYLE1"  name="U_sf">
                        <option value="是">是</option>
                        <option value="否">否</option>
                    </select>

                </td>
            </tr>
        </table>
}
</body>
</html>
