@model Model.MechanismSecondModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ToUpdate</title>
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script src="~/jquery-1.11.1.js"></script>
    <script src="~/jquery.validate.js"></script>
    <script src="~/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div> 
        @using(Html.BeginForm("Update", "MechanismSecond", FormMethod.Post)) { 

            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构变更
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <input type="hidden" name="cfsk.fskId" value=761 class="INPUT_STYLE1" />
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="FirstMid" value="@Model.FirstMid" />
                        <input type="text" name="FirstMName" readonly="readonly" class="INPUT_STYLE1" value="@Model.FirstMName">
                    </td>
                </tr>
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        II级机构编号
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <input type="text" name="SecondMid" readonly="readonly" class="INPUT_STYLE1" value="@Model.SecondMid">
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        II级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        @*<input type="text" name="SecondMName" readonly="readonly" class="INPUT_STYLE1" value="@Model.SecondMName">*@
                        @Html.TextBox("SecondMName", @Model.SecondMName, new { @class = "INPUT_STYLE1" })
                        @Html.ValidationMessage("SecondMName", new { @style = "color:red;" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("SalaryId", @Model.SalaryId, new { @class = "INPUT_STYLE1" })
                        @Html.ValidationMessage("SalaryId", new { @style = "color:red;" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("SalesId", @Model.SalesId, new { @class = "INPUT_STYLE1" })
                        @Html.ValidationMessage("SalesId", new { @style = "color:red;" })
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
