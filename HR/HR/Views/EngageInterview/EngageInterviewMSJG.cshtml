
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EngageInterviewMSJG</title>
    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css"
          type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">

    </script>
    <script src="~/vue-2.4.0.js"></script>
</head>
<body>
    <div id="aa"> 
        <form method="post" action="/HR_Fist/recruit/recruitAction!findInterviewByUtilBean?str=list" name="fm">
            <input type="hidden" id="HumanMajorKindId" value="@TempData["HumanMajorKindId"]" />
            <input type="hidden" id="HumanMajorId" value="@TempData["HumanMajorId"]" />
            <input type="hidden" id="GJZ" value="@TempData["GJZ"]" />
            <input type="hidden" id="StartTime" value="@TempData["StartTime"]" />
            <input type="hidden" id="EndTime" value="@TempData["EndTime"]" />
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--招聘管理--面试管理--面试结果登记--有效简历列表
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="10%" class="TD_STYLE1">
                        档案编号
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        姓名
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        性别
                    </td>
                    <td width="20%" class="TD_STYLE1">
                        职位分类
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        电话号码
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        面试状态
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        登记
                    </td>
                </tr>
                <tr v-for="(item,i) in ERs" >
                    <td class="TD_STYLE2">
                        {{item.Id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanName}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanSex}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanMajorKindName}}
                    </td>
                    <td class="TD_STYLE2">
                       {{item.HumanMajorName}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanTelephone}}
                    </td>
                    <td class="TD_STYLE2">
                        <span v-if="item.InterviewStatus==1">待面试</span>
                        <span v-if="item.InterviewStatus==2">待笔试</span>
                        <span v-if="item.InterviewStatus==3">待录用</span>
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="['/EngageInterview/EngageInterviewDJ/'+item.Id]" >登记</a>
                    </td>
                </tr>

            </table>
            <p>
                &nbsp;&nbsp;总数：{{rows}}例 &nbsp;&nbsp;&nbsp;当前第{{currentPage}} 页 /每页显示 {{pageSize}} 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a v-on:click="Prev()">上一页</a> &nbsp;&nbsp;&nbsp;
                <a v-on:click="Next()">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page v-on:change="SetCurrent()" type=text class=input1 id="currPage" v-model="currentPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" onclick="tj('1')" width=18 height=18 border=0>
            </p>
         </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#aa",
            data: {
                ERs:null,
                rows: 0,
                currentPage: 1,
                pageSize: 5,
                pages:0,
            },
            methods: {
                GetERs: function () {
                    var t = this;
                    $.ajax({
                        url: "../EngageInterview/GetEngageInterviewMSJG",
                        type: "post",
                        data: "currentPage=" + t.currentPage + "&pageSize=" + t.pageSize + "&HumanMajorKindId=" + $("#HumanMajorKindId").val() + "&HumanMajorId=" + $("#HumanMajorId").val() + "&GJZ=" + $("#GJZ").val() + "&StartTime=" + $("#StartTime").val() + "&EndTime=" + $("#EndTime").val(),
                        success: function (rs) {
                            var dic = eval("(" + rs + ")");
                            t.ERs = dic["list"];
                            t.rows = dic["rows"];
                            t.pages = Math.ceil(t.rows / t.pageSize);
                        }
                    });
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.GetERs();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.GetERs();
                },
                SetCurrent: function () {
                    if ($("#currPage").val() < 1 || $("#currPage").val() > this.pages || isNaN($("#currPage").val())) {
                        $("#currPage").val(1);
                        this.currentPage = 1;
                    } else {
                        this.currentPage = Number($("#currPage").val());
                    }
                    this.GetERs();
                },
            },
            created: function () {
                this.GetERs();
            }
        });
    </script>
</body>
</html>
