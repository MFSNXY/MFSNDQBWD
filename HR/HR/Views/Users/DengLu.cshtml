
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DengLu</title>
    <link href="~/bootstrap.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.3.5/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.3.5/themes/icon.css" rel="stylesheet" />
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <style type=text/css>
        *{
            padding:0px;
        }
        body {
            font-size: 12px;
            color: #ffffff;
            font-family: 宋体;
        }

        td {
            font-size: 12px;
            color: #ffffff;
            font-family: 宋体;
        }
        #bjthh{
            margin:0px;
            width:100%;
            height:100%;
            transition:2s ease-in-out;
        }
        #ee{
            /*display:none;*/
            /*border:1px solid red;*/
            position:absolute;
            width:450px;
            height:250px;
           text-align:center;
           margin-left:480px;
            transition:1.5s ease-in-out;
           transform:translateY(-1000px);
           color:black;
           color:#5A5858;
        }
        #ff{
             /*border:1px solid red;*/
             display:inline-block;
             height:75%;
             width:80%;
             margin:25px 0px 0px -395px;
             position:absolute;
            z-index:1;
        }
        .error{
            color:red;
        }
        #pt {
            /*border:1px solid red;*/
            /*filter: blur(5px);*/
            z-index: -1;
            border-radius:10px;
        }
        #topDiv{
            position:absolute;
            width:100%;
            /*border:1px solid red;*/
           transform:translateY(-76px);
            transition:1s ease-in-out 3s;
        }
        #leftDiv{
            position:absolute;
            display:inline-block;
            height:624px;
            /*border:1px solid red;*/
            transition:1s ease-in-out 3s;
            width:175px;
            margin-top:70px;
            background-color:#E9DBE3;
            transform:translateX(-175px);
        }
        #tabs{
            position:absolute;
            display:inline-block;
            /*border:1px solid red;*/
            height:624px;
            width:1190px;
            margin-top:70px;
            transition:1s ease-in-out 3s;
            transform:translateX(1350px);
            display:none;
        }
    </style>
    <script src="~/javascript/jquery.messager.js"></script>
    @*<script src="~/javascript/login.js"></script>*@
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script type="text/javascript" >
        $(function () {
            $("#bjthh").toggle(function () {
                $(this).css("filter", "blur(20px)");
                $("#ee").css({ "transform": "translateY(-540px)" });
            }, function () {
                $(this).css("filter", "blur(0px)");
                $("#ee").css({ "transform": "translateY(-1000px)" });
                $("[name='pid']").val("");
                $("[name='uid']").val("");
                $("[type='submit']").attr("disabled", false);
                $(".error:eq(0)").text("");
                $(".error:eq(0)").hide();
            });
            $("[name='pid']").change(function () {
                if ($(this).val().length < 6 && $(this).val()!="") {
                    $("[type='submit']").attr("disabled", true);
                    $(".error:eq(0)").text("密码不能少于6位");
                    $(".error:eq(0)").show();
                } else {
                    $("[type='submit']").attr("disabled", false);
                    $(".error:eq(0)").text("");
                    $(".error:eq(0)").hide();
                }
            })
            $("#wwwww").submit(function () {
                $.post("/Users/Dl", $("#wwwww").serialize(), function (rs) {
                    if (rs > 0) {
                        //alert("登陆成功!");
                        $("#ee").css({ "transform": "translateY(-1000px)" });
                        $("#bjthh").css("filter", "blur(0px)");
                        $("#bjthh").unbind();
                        $("#bjthh").css("transition", "none");
                        $("#bjthh").fadeOut(3000);
                        $("#topDiv").css({ "transform": "translateY(-0px)" });
                        $("#leftDiv").css({ "transform": "translateX(-0px)" });
                        $("#tabs").show();
                        $("#tabs").css({ "transform": "translateX(175px)" });
                        $("#top").attr("src", "/Home/Top");
                        $("#left").attr("src", "/Home/Left");
                    } else {
                        alert("登陆失败!");
                    }
                });
                return false;
            });
        });
        $(function () {
            $("#tt").tree({
                url: "../Home/GetTree",
                onClick: function (node) {
                    var url = node.Url;
                    if (url != null) {
                        var text = node.text;
                        if ($("#tabs").tabs("exists", text)) {
                            $("#tabs").tabs("select", text);
                        } else {
                            $("#tabs").tabs("add", {
                                title: text,
                                content: '<iframe src=' + url + ' width="99%" height="99%" ></iframe>',
                                closable: true,
                                tools: [{
                                    iconCls: 'icon-mini-refresh',
                                    handler: function () {
                                        var currTab = self.parent.$('#tabs').tabs('getSelected');
                                        var url = $(currTab.panel('options').content).attr('src');
                                        currTab.find("iframe").attr("src", url);
                                    }
                                }]
                            });
                        }
                    }
                }
            });
        });
    </script>
</head>
<body>
    <form class="form-inline" id="wwwww" method="post" action="/Users/Dl" >
        <div>
            <div id="topDiv" data-options="region:'north',split:false" style="height:75px;">
                <iframe id="top" width="100%" height="70px;" frameborder="0"></iframe>
            </div>
            <div id="leftDiv" data-options="region:'west',title:'导航栏',split:true">
                <iframe id="left" width="100%" height="100%" frameborder="0"></iframe>
            </div>
            <div id="tabs" class="easyui-tabs" data-options="region:'center'" style="padding:0px;background:url(../../images/无标题.png) 0px -50px no-repeat ;">
            </div>
            <img id="bjthh" src="../../images/无标题.png" />
            <div id="ee">
                <img id="pt" src="../../images/吃葡萄.png" />
                <div id="ff">
                    <div style="margin-top:15px;">
                        <span>
                            登 录 名：
                        </span>
                        <span>
                            <input autocomplete="off" size="30" required="required" placeholder="请输入登录名" class="form-control" type="text" name="uid" />
                        </span>
                    </div>
                    <div style="margin-top:15px;">
                        <span>
                            登录密码：
                        </span>
                        <span>
                            <input size="30" required="required" placeholder="请输入登录密码" class="form-control" name="pid" type="password" />
                            <span style="display:block;" class="error" ></span>
                        </span>
                    </div>
                    <div style="margin-top:20px;">
                        <input type="submit" class="btn btn-default  btn-block" value="登录" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
