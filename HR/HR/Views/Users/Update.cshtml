@model Model.UsersModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
@using (Html.BeginForm("up", "Users", FormMethod.Post))
{
    <table width="100%">
        <tr>
            <td>
                <font color="black">您正在做的业务是：人力资源--权限管理--修改用户</font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="submit" value="保存" class="BUTTON_STYLE1" />
                <input type="button" value="返回" class="BUTTON_STYLE1"
                       onclick="history.back()">
            </td>
        </tr>
    </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">用户名称</td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="U_id" value="@Model.U_id" />
                    @Html.TextBox("U_name", null, new { @class = "INPUT_STYLE2" })
                    @Html.ValidationMessage("U_name")
                </td>
                <td class="TD_STYLE1">用户密码</td>
                <td class="TD_STYLE2">
                    @Html.TextBox("U_password", null, new { @type = "password", @class = "INPUT_STYLE2" })
                    @Html.ValidationMessage("U_password")
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">真实姓名</td>
                <td class="TD_STYLE2">
                    @Html.TextBox("U_true_name", null ,new { @class = "INPUT_STYLE2" })
                    @Html.ValidationMessage("U_true_name")
                </td>
                <td class="TD_STYLE1">用户身份</td>
                <td class="TD_STYLE2">
                    @Html.DropDownList("U_oid", ViewBag.s as IEnumerable<SelectListItem>, new { @class = "form-control SELECT_STYLE1" })
                </td>
            </tr>
        </table>
}
</body>
</html>
