
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
        <link href="~/css/table.css" rel="stylesheet" />
        <link href="http://localhost:20727/css/table.css" rel="stylesheet" />
        <script src="~/javascript/comm/comm.js"></script>
        <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/vue-2.4.0.js"></script>
</head>
<body>
    <div id="pro"> 
        <form method="post" action="../customiz/customizAction!findMajorKind">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="添加" class="BUTTON_STYLE1"
                                onclick="window.location.href = '/ConfigMajorKind/Create';">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="46%" class="TD_STYLE1">
                        职位分类编号
                    </td>
                    <td width="47%" class="TD_STYLE1">
                        职位分类名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>
                <tr v-for="(item,i) in dt">
                    <td>{{item.Id}}</td>
                    <td>{{item.Majorkindname}}</td>
                    <td>
                        <a v-bind:href="['/ConfigMajorKind/Del/'+item.Id]" onclick="return confirm('确定删除吗？')">删除</a>
                        
                    </td>
                </tr>


            </table>
            <p>

        </form>
    </div>


    <script type="text/javascript">
        var vm = new Vue({
            el: "#pro",
            data: {
                id:"",
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/ConfigMajorKind/Index2",
                        type: "post",
                        success: function (r) {
                            var mdt = eval("(" + r + ")");
                            t.dt = mdt;
                        }
                    });
                }
            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
