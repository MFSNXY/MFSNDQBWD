    <script type="text/javascript">
        var vm = new Vue({
            el: "#aa",
            data: {
                MFs: null,
                MSs: null,
                MTs: null,
                Ms: null,
                MKs: null,
                MFName: null,
                MSName: null,
                MTName: null,
                MKName: null,
                MName: null,
                CPs: null,
                SalaryStandardName: $("#SalaryStandardId option:checked").text(),
