
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HumanFileRegisterList</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css" />
    <script src="~/jquery-1.11.1.js"></script>
    <script src="~/vue-2.4.0.js"></script>
</head>
<body>
    <div id="aa">
        <form>
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案登记 </font>
                    </td>
                </tr>
                <tr>
                    <td>
                        当前等待复核的人力资源档案总数： {{rows}} 例
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=5 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr class="TR_STYLE1">
                <tr class="TR_STYLE1">
                    <td class="TD_STYLE1">
                        姓名
                    </td>
                    <td class="TD_STYLE1">
                        性别
                    </td>
                    <td class="TD_STYLE1">
                        年龄
                    </td>
                    <td class="TD_STYLE1">
                        职位类别
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE1">
                        毕业院校
                    </td>
                    <td class="TD_STYLE1">
                        学历专业
                    </td>
                    <td class="TD_STYLE1">
                        登记
                    </td>
                </tr>

                <tr v-for="(item,i) in HFs" class="TR_STYLE1">
                    <td class="TD_STYLE2">
                        {{item.HumanName}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanSex}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanAge}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanMajorKindName}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanMajorName}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanCollege}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.HumanEducatedMajor}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="['/HumanFile/HumanFileRegister?id='+item.Id]">登记</a>
                    </td>
                </tr>
            </table>
            <p>
                &nbsp;&nbsp;总数：{{rows}}例 &nbsp;&nbsp;&nbsp;当前第{{currentPage}} 页 /每页显示 {{pageSize}} 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a v-on:click="Prev()">上一页</a> &nbsp;&nbsp;&nbsp;
                <a v-on:click="Next()">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page v-on:change="SetCurrent()" type=text class=input1 id="currPage" v-model="currentPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" onclick="tj('1')" width=18 height=18 border=0>
            </p>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#aa",
            data: {
                HFs:null,
                rows: 0,
                currentPage: 1,
                pageSize: 5,
                pages:0,
            },
            methods: {
                GetHFs: function () {
                    var t = this;
                    $.ajax({
                        url: "/EngageEmploy/GetEngageEmployLYCX",
                        type: "post",
                        data: "currentPage=" + t.currentPage + "&pageSize=" + t.pageSize ,
                        success: function (rs) {
                            var dic = eval("(" + rs + ")");
                            t.HFs = dic["list"];
                            t.rows = dic["rows"];
                            t.pages = Math.ceil(t.rows / t.pageSize);
                        }
                    });
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.GetHFs();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.GetHFs();
                },
                SetCurrent: function () {
                    if ($("#currPage").val() < 1 || $("#currPage").val() > this.pages || isNaN($("#currPage").val())) {
                        $("#currPage").val(1);
                        this.currentPage = 1;
                    } else {
                        this.currentPage = Number($("#currPage").val());
                    }
                    this.GetHFs();
                }
            },
            created: function () {
                this.GetHFs();
            }
        });
    </script>
</body>
</html>
