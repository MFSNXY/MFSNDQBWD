@model Model.HumanFileModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HumanFileRecoveryListInformation</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script src="~/jquery-1.11.1.js"></script>
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script language="javascript"
            src="../../javascript/winopen/winopenm.js">
    </script>
    <style type="text/css">
        .aa {
            border: 1px solid black;
        }
    </style>
    <script type="text/javascript">
            $(function () {
                $(".zp").hover(function () {
                    $(".dt").show();
                },
                function () {
                    $(".dt").hide();
                });
            });
    </script>
</head>
<body>
    <div>
        <form name="humanfileForm" method="post" action="/hr/humanfile.do">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案删除 </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="恢复" class="BUTTON_STYLE1"
                               onclick="if(confirm('确认恢复吗?')){location='/HumanFile/HumanFileRecovery?id=@Model.Id';}">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back()">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1" width="10%">
                        档案编号
                    </td>
                    <td colspan="6" class="TD_STYLE2 aa">
                        @Model.HumanId
                    </td>
                    <td rowspan="6" width="13%" style="text-align: center;">
                        <img class="zp" style="margin-left:0px;width:140px;height:140px;" src="@(Model.HumanPicture.Substring(Model.HumanPicture.IndexOf(@"\HumanFileImage")))" />
                        <img class="dt" style="position:absolute;width:400px;height:400px;margin:-140px 0px 0px -400px;display:none;" src="@(Model.HumanPicture.Substring(Model.HumanPicture.IndexOf(@"\HumanFileImage")))" />
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1" width="10%">
                        I级机构
                    </td>
                    <td width="13%" class="TD_STYLE2 aa">
                        @Model.FirstMName
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        II级机构
                    </td>
                    <td width="13%" class="TD_STYLE2 aa">
                        @Model.SecondMName
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        III级机构
                    </td>
                    <td class="TD_STYLE2 aa" colspan="2" width="2%">
                        @Model.ThirdMName
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        职位分类
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanMajorKindName
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanMajorName
                    </td>
                    <td class="TD_STYLE1">
                        职称
                    </td>
                    <td colspan="2" class="TD_STYLE2 aa">
                        @Model.HumanProDesignation
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        姓名
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanName
                    </td>
                    <td class="TD_STYLE1">
                        性别
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanSex
                    </td>
                    <td class="TD_STYLE1">
                        EMAIL
                    </td>
                    <td colspan="2" class="TD_STYLE2 aa">
                        @Model.HumanEmail
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        电话
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanTelephone
                    </td>
                    <td class="TD_STYLE1">
                        QQ
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanQQ
                    </td>
                    <td class="TD_STYLE1">
                        手机
                    </td>
                    <td colspan="2" class="TD_STYLE2 aa">
                        @Model.HumanMobilephone
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        住址
                    </td>
                    <td colspan="3" class="TD_STYLE2 aa">
                        @Model.HumanAddress
                    </td>
                    <td class="TD_STYLE1">
                        邮编
                    </td>
                    <td colspan="2" class="TD_STYLE2 aa">
                        @Model.HumanPostcode
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        国籍
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanNationality
                    </td>
                    <td class="TD_STYLE1">
                        出生地
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanBirthplace
                    </td>
                    <td class="TD_STYLE1">
                        生日
                    </td>
                    <td width="13%" class="TD_STYLE2 aa">
                        @Model.HumanBirthday.ToString("yyyy-MM-dd hh:mm:ss")
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        民族
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanRace
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        宗教信仰
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanReligion
                    </td>
                    <td class="TD_STYLE1">
                        政治面貌
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanParty
                    </td>
                    <td class="TD_STYLE1">
                        身份证号码
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanIdcard
                    </td>
                    <td class="TD_STYLE1">
                        社会保障号码
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanSocietySecurityId
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        年龄
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanAge
                    </td>
                    <td class="TD_STYLE1">
                        学历
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanEducatedDegree
                    </td>
                    <td class="TD_STYLE1">
                        教育年限
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanEducatedYears
                    </td>
                    <td class="TD_STYLE1">
                        学历专业
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanEducatedMajor
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬标准
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.SalaryStandardName
                    </td>
                    <td class="TD_STYLE1">
                        开户银行
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanBank
                    </td>
                    <td class="TD_STYLE1">
                        帐号
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanAccount
                    </td>
                    <td class="TD_STYLE1">
                        复核人
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.Checker
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        复核时间
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.CheckTime.ToString("yyyy-MM-dd hh:mm:ss")
                    </td>
                    <td class="TD_STYLE1">
                        特长
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanSpecility
                    </td>
                    <td class="TD_STYLE1">
                        爱好
                    </td>
                    <td class="TD_STYLE2 aa">
                        @Model.HumanHobby
                    </td>
                    <td class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td class="TD_STYLE2 aa">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        档案附件
                    </td>
                    <td colspan="7" class="TD_STYLE2 aa">
                        <a href="#"></a>
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        个人履历
                    </td>
                    <td colspan="7" class="TD_STYLE2 aa">
                        <textarea name="item.humanHistroyRecords" rows="4"
                                  class="TEXTAREA_STYLE1" readonly="readonly">
                            @Model.HumanHistoryRecords
                        </textarea>
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        家庭关系信息
                    </td>
                    <td colspan="7" class="TD_STYLE2 aa">
                        <textarea name="item.humanFamilyMembership" rows="4"
                                  class="TEXTAREA_STYLE1" readonly="readonly">
                            @Model.HumanFamilyMembership
                        </textarea>
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        备注
                    </td>
                    <td colspan="7" class="TD_STYLE2 aa">
                        <textarea name="item.remark" rows="4" class="TEXTAREA_STYLE1" readonly="readonly">@Model.Remark</textarea>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
