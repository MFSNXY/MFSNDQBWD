    <script type="text/javascript">
        var vm = new Vue({
            el: "#aa",
            data: {
                es: null,
                rows: 0,
                currentPage: 1,
                pageSize: 5,
                pages:0,
            },
            methods: {
                GetEs: function () {
                    var t = this;
                    $.ajax({
                        url: "../SalaryGrant/XCFFCX2",
                        type: "post",
                        data: "currentPage=" + t.currentPage + "&pageSize=" + t.pageSize + "&Salarystandardid=" + $("#Salarystandardid").val() + "&GJZ=" + $("#GJZ").val() + "&startDate=" + $("#startDate").val() + "&endDate=" + $("#endDate").val(),
                        success: function (rs) {
                            t.es = eval("(" + rs + ")");
                            $.ajax({
                                url: "../SalaryGrant/GetRow2",
                                type: "post",
                                success: function (rs) {
                                    t.rows = rs;
                                    t.pages = Math.ceil(t.rows / t.pageSize);
                                }
                            });
                        }
                    });
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.GetEs();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.GetEs();
                },
                SY: function () {

                        this.currentPage = 1;
                    this.GetEs();
                },
                MY: function () {
                    this.currentPage = this.pages;
                    this.GetEs();
                },
                SetCurrent: function () {
                    if ($("#currPage").val() < 1 || $("#currPage").val() > this.pages || isNaN($("#currPage").val())) {
                        $("#currPage").val(1);
                        this.currentPage = 1;
                    } else {
                        this.currentPage = $("#currPage").val();
                    }
                    this.GetEs();
                },
            },
            created: function () {
                this.GetEs();
            }
