            },
            methods: {
                GetMK: function (id) {
                    var t = this;
                    $.ajax({
                        url: "/ConfigMajorKind/Index2",
                        type: "post",
                        success: function (r) {
                            var mdt = eval("(" + r + ")");
                            //t.MKName = mdt[0].Majorkindname;
                            t.MKs = mdt;
                            for(var q in t.MKs){
                                if(t.MKs[q]["Majorkindid"]==(@Model.HumanMajorKindId)){
                                    t.GetMs(t.MKs[q]["Majorkindid"]);
                                }
                            }
                        }
                    });
                },
                GetMs: function (id) {
                    var t = this;
                    var flag=false;
                    if(id==null){
                        flag=true;
                        id=$("#MajorKindid").val();
                        t.MKName = $("#MajorKindid option:checked").text();
                    }

                    $.ajax({
                        url: "/Engage/GetMs",
                        type: "post",
                        data: "id=" + id,
                        success: function (r) {
                            var mdt = eval("(" + r + ")");
                            if (mdt.length > 0) {
                                t.Ms = mdt;
                                if(flag){
                                    t.MId=mdt[0].Majorid;
                                    t.MName = mdt[0].Majorname;
                                }
                                $("#www").remove();
                                //t.MName = eval("(" + r + ")")[0].Majorname;
                                t.Ms = eval("(" + r + ")");
                                $("#Majorid").attr("disabled", false);
                                $("#ssd").attr("disabled", false);
                                $("#Majorid").css("backgroundColor", "#FFFFCC")
                            } else {
                                t.MName = "";
                                t.Ms = [{ Majorname: "请重新选择职位分类", Majorid: "0" }];
                                $("#Majorid").attr("disabled", "disabled");
                                $("#ssd").attr("disabled", "disabled");
                                $("#Majorid").css("backgroundColor", "#EEE")
                            }
                        }
                    });
                },
                GetMName: function () {
                    this.MName = $("#Majorid option:checked").text();
                },
            },
            created: function () {
                this.GetMK();
            }
        });
